#!/usr/bin/env node

'use strict';

var program = require('commander');

program
  .version(require('../package.json').version)
  .usage(['init', 'fetch', 'build', 'server'].join('|') + '\n\n  See https://github.com/jtrussell/stello for more information')
  .option('--dest <dir>')
  .option('--dry-run')
  .option('--force')
  .option('--src <dir>')
  .option('--tmp-dir <dir>')
  .option('--trello-api-key <key>')
  .option('--trello-token <token>')
  .option('--trello-board-url <url>')
  .option('--trello-board-pages-list <list>')
  .option('--trello-board-blog-list <list>')
  .parse(process.argv);

if(!program.args.length) {
  program.help();
}

require('../lib/cli')(program);
