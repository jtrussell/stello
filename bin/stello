#!/usr/bin/env node

'use strict';

var program = require('commander');

program
  .version(require('../package.json').version)
  .usage(['init', 'fetch', 'build', 'server'].join('|') + '\n\n  See https://github.com/jtrussell/stello for more information')
  .option('--dest')
  .option('--dry-run')
  .option('--force')
  .option('--src')
  .option('--tmp-dir')
  .option('--trello-api-key')
  .option('--trello-token')
  .option('--trello-board-url')
  .option('--trello-board-pages-list')
  .option('--trello-board-blog-list')
  .parse(process.argv);

if(!program.args.length) {
  program.help();
}

require('../lib/cli')(program);
